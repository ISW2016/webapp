<div class="container">
    <h1>Foro</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foros.each do |foro| %>
      <tr>
        <td><%= foro.title %></td>
        <td><%= foro.content %></td>
        <% if current_usuario %>
            <%if current_usuario.admin == true %>
                <td><%= link_to 'Mostrar', foro %></td>
                <td><%= link_to 'Editar', edit_foro_path(foro) %></td>
                <td><%= link_to 'Eliminar', foro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
            <%= link_to 'Crear Tema', new_foro_path %>
            <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>